/* orderList.wxss */
.page {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding: 20rpx;
}

.order-list {
  background-color: #f5f5f5;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  padding: 0 20rpx;
}

.order-item {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.order-info {
  flex: 1;
}

.service-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.service-time {
  font-size: 26rpx;
  color: #666;
}

.order-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.order-status.pending {
  background-color: #fff3cd;
  color: #856404;
}

.order-status.in_progress {
  background-color: #d1ecf1;
  color: #0c5460;
}

.order-status.completed {
  background-color: #d4edda;
  color: #155724;
}

.order-status.cancelled {
  background-color: #f8d7da;
  color: #721c24;
}

.order-details {
  margin-bottom: 20rpx;
}

.detail-item {
  display: flex;
  margin-bottom: 12rpx;
  font-size: 26rpx;
}

.detail-item:last-child {
  margin-bottom: 0;
}

.label {
  color: #999;
  min-width: 140rpx;
}

.value {
  color: #333;
  flex: 1;
}

.value.price {
  color: #e64340;
  font-weight: bold;
}

.order-actions {
  display: flex;
  justify-content: flex-end;
}

.track-btn {
  background-color: #007aff;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  padding: 12rpx 24rpx;
  font-size: 26rpx;
}

.track-btn::after {
  border: none;
}

.empty-state {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}