<!--detailInfo.wxml-->
<view class="page">
  <!-- 服务标题和价格 -->
  <view class="service-header">
    <view class="service-title">{{serviceName}}</view>
    <view class="service-price">
      <text class="current-price">¥{{amount}}</text>
      <text class="original-price">{{price}}元/天</text>
    </view>
  </view>

  <!-- 服务详情描述 -->
  <view class="content">
    {{detail}}
  </view>

  <!-- 服务图片 -->
  <view class="image-gallery">
    <block wx:for="{{images}}" wx:key="index">
      <image src="{{item}}" mode="aspectFill" class="service-image"></image>
    </block>
  </view>

  <!-- 服务内容 -->
  <view class="service-section">
    <view class="section-title">服务内容</view>
    <view class="service-list">
      <block wx:for="{{serviceContent}}" wx:key="index">
        <view class="service-item">• {{item}}</view>
      </block>
    </view>
  </view>

  <!-- 服务流程 -->
  <view class="service-section">
    <view class="section-title">服务流程</view>
    <view class="service-list">
      <block wx:for="{{serviceProcess}}" wx:key="index">
        <view class="service-item">{{index + 1}}. {{item}}</view>
      </block>
    </view>
  </view>

  <!-- 注意事项 -->
  <view class="service-section">
    <view class="section-title">注意事项</view>
    <view class="service-list">
      <block wx:for="{{precautions}}" wx:key="index">
        <view class="service-item">• {{item}}</view>
      </block>
    </view>
  </view>

  <view class="ft-bar">
    <view class="amount">合计 ￥{{amount}}</view>
    <button class="send-btn" catchtap="sendbtnClick">立即预约</button>
  </view>
</view>
