.section,
.section-textarea,
.section-image{
  padding:20rpx 30rpx;
  font-size:30rpx;
}
.section{
  position: relative;
  border-bottom:1px solid #eee;
}
.section .title{
  width:160rpx;
}
.star-rating{
  position: absolute;
  right:30rpx;
  top:20rpx;
  display: flex;
  align-items: center;
}
.star-rating .star{
  width:32rpx;
  height:32rpx;
  margin-left:8rpx;
  cursor: pointer;
  transition: all 0.3s ease;
}
.star-rating .star:first-child{
  margin-left:0;
}
.star-rating .star.active{
  transform: scale(1.1);
}

.image-item{
  position: relative;
  display:inline-block;
  margin:10rpx;
  box-sizing: border-box;
  width:120rpx;
  height:120rpx;
  border:1px solid #eee;
}
.image-item image{
  width:100%;
  height:100%;
}

.add-btn:before{
  position:absolute;
  top:50%;
  left:50%;
  transform: translate(-50%, -50%);
  content: '+';
  display: block;
  color: #eee;
  font-size: 60rpx;
}
.delete-btn:before{
  position:absolute;
  top:0;
  right:0;
  content: 'X';
  display: block;
  color: #fff;
  font-size: 20rpx;
  background:rgba(0,0,0,.6);
  width:30rpx;
  height:30rpx;
  line-height:30rpx;
  text-align: center;
}

.ft-btn{
  margin:30rpx;
}
.ft-btn .send-btn{
  width:100%;
  background:#1a99fc;
  font-size:32rpx;
  color:#fff;
  text-align:center;
  border-radius: 0;
}
