/* booking.wxss */

.address-btn{
  padding: 20rpx;
  color:#666;
  font-size:39rpx;
}
.section{
  display:flex;
  flex-flow:row wrap;
  box-sizing:border-box;
  padding: 10rpx 20rpx;
  border-top:1px solid #eee;
  font-size:26rpx;
  line-height: 72rpx;
}
.section .title{
  width:160rpx;
  display: block;
  color:#333;
  line-height: 40rpx;
}
.section input,
.date-time,
.section textarea {
  width:520rpx;
  color:#666;
  height:40rpx;
  line-height: 40rpx;
  padding:10rpx;
}

.date-time{
  width:auto;
  display:flex;
  flex-flow:row wrap;
  justify-content: space-between;
}
.date-time picker{
  margin-right:20rpx;
}

.section textarea {
  width:520rpx;
  height:140rpx;
  box-sizing: border-box;
}

.form-ft {
  margin:20rpx;
  text-align: right;
}
.form-ft .txt{
  color:red;
  font-size:28rpx;
}
 .ft-bar{
  position: fixed;
  bottom:0;
  left:0;
  width:100%;
  height:90rpx;
  line-height:90rpx;
  display:flex;
  flex-flow:row wrap;
  justify-content: space-between;
  box-sizing:border-box;
  border-top:1px solid #eee;
  background:#fff;
}
.ft-bar .send-btn{
  width:100%;
  background:#1a99fc;
  font-size:32rpx;
  color:#fff;
  text-align:center;
  border-radius: 0;
}

.workers {
  width: 520rpx;
}

.worker-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1px solid #eee;
  position: relative;
}

.worker-item.selected {
  background-color: #f0f8ff;
  border-radius: 8rpx;
}

.worker-info {
  display: flex;
  flex: 1;
}

.worker-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.worker-details {
  flex: 1;
}

.worker-name {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.worker-title {
  font-size: 24rpx;
  color: #1a99fc;
  margin-left: 10rpx;
}

.worker-stats {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.worker-stats text {
  margin-right: 20rpx;
}

.worker-specialties {
  display: flex;
  flex-wrap: wrap;
}

.specialty-tag {
  background-color: #f0f0f0;
  color: #666;
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  margin-right: 10rpx;
  margin-bottom: 6rpx;
}

.selected-icon {
  position: absolute;
  right: 20rpx;
  color: #1a99fc;
  font-size: 32rpx;
  font-weight: bold;
}